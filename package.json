{
  "name": "react-native-micro-form",
  "version": "1.0.0",
  "description": "A minimal, schema-based, form component for React Native",
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.tsx\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": "https://github.com/felipearosemena/react-native-micro-form.git",
  "author": "Felipe Arosemena <felipearosemena@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "jest": "^25.4.0",
    "prettier": "^2.0.5",
    "ts-jest": "^25.4.0",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "react",
    "react native",
    "forms",
    "schema"
  ]
}
